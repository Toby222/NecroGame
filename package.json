{
  "repository": {
    "type": "git",
    "url": "git://github.com/toman222/Impact.git"
  },
  "scripts": {
    "dev": "next",
    "build": "npm run build-scss && next build",
    "start": "next start",
    "build-scss": "sass scss/impact.scss public/impact.css",
    "lint": "standardx **/*.{ts,tsx}",
    "test": "tsc && npm run lint"
  },
  "devDependencies": {
    "@types/node": "^14.0.24",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint-plugin-jsdoc": "^30.0.3",
    "next": "^9.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "sass": "^1.26.10",
    "standardx": "^5.0.0",
    "typescript": "^3.9.7"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "args": "all",
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "jsdoc/check-examples": 1,
      "jsdoc/check-indentation": 1,
      "jsdoc/check-syntax": 1,
      "jsdoc/no-types": 1,
      "jsdoc/no-undefined-types": 1,
      "jsdoc/require-description": 1,
      "jsdoc/require-description-complete-sentence": 1,
      "jsdoc/require-param-type": 0,
      "jsdoc/require-returns-type": 0
    },
    "extends": [
        "plugin:jsdoc/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "jsdoc"
    ]
  },
  "version": "0.0.1-indev.1"
}
